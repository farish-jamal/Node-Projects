<!-- views/response.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OpenAI Response</title>
</head>
<body>
  <div class="container">
    <% if (response && prompt) { %>
      <h1>OpenAI Response:</h1>
      <p>Prompt: <%= prompt %></p>
      <p>Response: <%= response %></p>
    <% } else { %>
      <p>No valid response or prompt provided.</p>
    <% } %>
  </div>
</body>
</html>